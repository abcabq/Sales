<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/nav_view"/>
	<LinearLayout 
	    android:background="@drawable/dailyattendance_bg"
	    android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="10dip">
	    <TextView 
            android:text="考核时段： 9：00~18：00"
            android:padding="5dip"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"/>
	</LinearLayout>
    <LinearLayout 
	    android:orientation="vertical"
	    android:gravity="right"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
   		android:layout_marginLeft="10dip"
   		android:layout_marginRight="10dip"
    	android:background="@drawable/dailyattendance_bg">
	    <TextView 
	        android:id="@+id/dailyattendance_desp"
            android:text="已经签到"
            android:background="@drawable/tip_bg_green"
            android:visibility="gone"
            android:layout_margin="5dip"
            android:paddingBottom="10dip"
            android:paddingTop="5dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:textColor="@android:color/white"
            android:textSize="16sp"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"/>
	    <LinearLayout 
	        android:orientation="horizontal"
		    android:gravity="right|bottom"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
	        <ImageView 
	            android:id="@+id/hour_l"
		    	android:layout_margin="3dip"
	            android:src="@drawable/mask_number_0"
   				android:layout_width="wrap_content"
   				android:layout_height="wrap_content"/>
	        <ImageView 
	            android:id="@+id/hour_r"
		    	android:layout_margin="3dip"
	            android:src="@drawable/mask_number_0"
   				android:layout_width="wrap_content"
   				android:layout_height="wrap_content"/>
	        <TextView 
	            android:text="小时"
	            android:textSize="13sp"
   				android:layout_width="wrap_content"
   				android:layout_height="wrap_content"
		    	android:layout_marginLeft="3dip"
		    	android:layout_marginRight="3dip"/>
	        <ImageView 
	            android:id="@+id/minute_l"
		    	android:layout_margin="3dip"
	            android:src="@drawable/mask_number_0"
   				android:layout_width="wrap_content"
   				android:layout_height="wrap_content"/>
	        <ImageView 
	            android:id="@+id/minute_r"
		    	android:layout_margin="3dip"
	            android:src="@drawable/mask_number_0"
   				android:layout_width="wrap_content"
   				android:layout_height="wrap_content"/>
	        <TextView 
	            android:text="分"
	            android:textSize="13sp"
   				android:layout_width="wrap_content"
   				android:layout_height="wrap_content"
		    	android:layout_marginLeft="3dip"
		    	android:layout_marginRight="3dip"/>
	    </LinearLayout>
	    
	</LinearLayout>
    <TextView 
	    android:id="@+id/dailyattendance_in"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/confirm_button_noable"
		android:layout_marginTop="20dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:text="签   到"
		android:paddingTop="10dip"
		android:paddingBottom="10dip"
		android:textSize="20sp"
		android:gravity="center"
		android:textColor="@android:color/white" />
    <TextView 
	    android:id="@+id/dailyattendance_out"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/confirm_button_noable"
		android:layout_marginTop="20dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:text="签   退"
		android:paddingTop="10dip"
		android:paddingBottom="10dip"
		android:textSize="20sp"
		android:gravity="center"
		android:textColor="@android:color/white" />
    <TextView 
        android:id="@+id/dailyattendance_time"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="20dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
</LinearLayout>
