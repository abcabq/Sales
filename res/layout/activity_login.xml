<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f3f6f7" >
    <include layout="@layout/nav_view"/>    
    <LinearLayout 
	    android:background="@drawable/login_item_text_bg"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    android:layout_marginTop="20dip"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
	    <LinearLayout 
		    android:layout_marginLeft="10dip"
		    android:layout_marginRight="10dip"
	    	android:padding="10dip"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
		    <TextView 
		        android:text="用户名："
		        android:textColor="#868686"
		        android:textSize="15sp"
	    		android:layout_width="80dip"
	    		android:layout_height="wrap_content"/>
		    <EditText 
		        android:id="@+id/login_name"
		        android:background="@null"
		        android:hint="请输入用户名"
		        android:textSize="15sp"
		        android:textColor="#868686"
		        android:singleLine="true"
		        android:textColorHint="#b6b6b6"
		        android:layout_width="match_parent"
	    		android:layout_height="wrap_content"/>
		</LinearLayout>
		<ImageView 
		    android:background="@drawable/login_item_line"		    
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"/>
		<LinearLayout 
		    android:layout_marginLeft="10dip"
		    android:layout_marginRight="10dip"
	    	android:padding="10dip"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
		    <TextView 
		        android:text="密码"
		        android:textColor="#868686"
		        android:textSize="15sp"
	    		android:layout_width="80dip"
	    		android:layout_height="wrap_content"/>
		    <EditText 
		        android:id="@+id/login_pass"
		        android:background="@null"
		        android:inputType="textPassword"
		        android:hint="请输入密码"
		        android:textSize="15sp"
		        android:singleLine="true"
		        android:textColor="#868686"
		        android:textColorHint="#b6b6b6"
		        android:layout_width="match_parent"
	    		android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>
	<RelativeLayout 
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    android:layout_marginTop="20dip">
	    <CheckBox  
            android:id="@+id/remember_pass"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            style="@style/login_checkbox_style"
            android:textColor="#b2b3b3"
            android:paddingLeft="18dip"
            android:layout_marginLeft="10dip"
            android:textSize="16sp"
            android:text="记住密码"
            android:checked="true"/>  
        <CheckBox  
            android:id="@+id/auto_login"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            style="@style/login_checkbox_style"
            android:textColor="#b2b3b3"
            android:paddingLeft="18dip"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:text="自动登录"
            android:layout_marginRight="10dip"
            android:checked="true"/>
	</RelativeLayout>
	<TextView 
	    android:id="@+id/login_button"
        android:text="登  陆"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="10dip"
        android:gravity="center"        
	    android:layout_marginTop="30dip"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
        android:background="@drawable/login_now"
   		android:layout_width="match_parent"
   		android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/regist_button"
        android:text="注  册"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="10dip"
        android:gravity="center"        
	    android:layout_marginTop="20dip"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
        android:background="@drawable/regist_now"
   		android:layout_width="match_parent"
   		android:layout_height="wrap_content"/>
</LinearLayout>
